{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es5",
    "sourceMap": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "lib": ["es6"],
    "outDir": "dist",
    "typeRoots": ["node_modules/@types",
      "@types"
    ],
    "skipLibCheck": true,
    "allowJs": true
  },
  "files": [
    "@types/graphql.d.ts"
  ],
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules", "dist",
    "test", "**/*.spec.ts"]
}